@namespace BlazorBindings.Maui.Elements

<ContentView>
    <VerticalStackLayout>
        <FlexLayout AlignItems="FlexAlignItems.Center" JustifyContent="FlexJustify.SpaceAround" Padding="new Thickness(0, 40)">
            <RoundedActionButton Icon="MaterialIcons.Bookmark" Label="Save" />
            <RoundedActionButton Icon="MaterialIcons.Shuffle" Label="Remix" />
            <RoundedActionButton Icon="MaterialIcons.QrCode" Label="QR Code" />
        </FlexLayout>

        <BoxView HeightRequest="1" Color="@Colors.LightGray" />

        <Button Icon.Value="@FavouritesIcon"
                Text="Add to favourite"
                TextColor="@Colors.Black"
                BackgroundColor="@Colors.Transparent"
                HorizontalOptions="LayoutOptions.Start" />

        <Button Icon.Value="@PersonRemoveIcon"
                Text="Unfollow"
                TextColor="@Colors.Black"
                BackgroundColor="@Colors.Transparent"
                HorizontalOptions="LayoutOptions.Start" />

        <BoxView HeightRequest="1" Color="@Colors.LightGray" />

        <Button Icon.Value="@HideSourceIcon"
                Text="Hide this post"
                TextColor="@Colors.Black"
                BackgroundColor="@Colors.Transparent"
                HorizontalOptions="LayoutOptions.Start" />

        <Button Icon.Value="@InfoOutlineIcon"
                Text="More about this account"
                TextColor="@Colors.Black"
                BackgroundColor="@Colors.Transparent"
                HorizontalOptions="LayoutOptions.Start" />

        <Button Icon.Value="@ReportIcon"
                Text="Report"
                TextColor="@Colors.Red"
                BackgroundColor="@Colors.Transparent"
                HorizontalOptions="LayoutOptions.Start" />
    </VerticalStackLayout>
</ContentView>
